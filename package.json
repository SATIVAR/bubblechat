{
  "name": "bubblechat-platform",
  "version": "1.0.0",
  "description": "Plataforma Bubblle Agent CRM - Multi-tenant LLM Chat Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "node setup.js",
    "dev": "turbo run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:admin": "cd apps/admin-dashboard && npm run dev",
    "dev:widget": "cd apps/widget-fab && npm run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "start:api": "cd apps/api && npm run start",
    "start:admin": "cd apps/admin-dashboard && npm run start",
    "start:widget": "cd apps/widget-fab && npm run start"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.1"
  },
  "dependencies": {
    "@bubblechat/ui": "*",
    "@prisma/client": "^5.11.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.18",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.12",
    "clsx": "^2.1.0",
    "dotenv": "^16.4.5",
    "firebase": "^10.10.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "moment": "^2.30.1",
    "mongoose": "^8.2.1",
    "next": "^14.1.1",
    "openai": "^4.28.4",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-firebase-hooks": "^5.1.1",
    "react-hook-form": "^7.51.0",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "react-textarea-autosize": "^8.5.3",
    "redis": "^4.6.15",
    "turbo": "^2.0.6",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
