# Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database
DATABASE_URL="postgresql://bubblechat_user:bubblechat_pass@localhost:5432/bubblechat"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secret (generate a strong secret for production)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# LLM API Keys
OPENAI_API_KEY="your-openai-api-key"
GEMINI_API_KEY="your-gemini-api-key"
AGNO_API_KEY="your-agno-api-key"
AGNO_BASE_URL="https://api.agno.ai/v1"

# Super Admin Credentials
SUPER_ADMIN_EMAIL="admin@bubblechat.com"
SUPER_ADMIN_PASSWORD="admin123"

# Document Processing
MAX_FILE_SIZE="50MB"
UPLOAD_PATH="./uploads"
OCR_LANGUAGE="por"
OCR_CONFIDENCE_THRESHOLD=80
PDF_MAX_PAGES=100
SPREADSHEET_MAX_ROWS=10000

# CORS Origins
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:3002"

# API URLs
API_URL="http://localhost:3002"
ADMIN_URL="http://localhost:3001"
WIDGET_URL="http://localhost:3000"

# Docker Database
POSTGRES_USER=bubblechat_user
POSTGRES_PASSWORD=bubblechat_pass
POSTGRES_DB=bubblechat
REDIS_PASSWORD=redis_pass